void @ModelName@_spectrum_plotter::write_spectrum(const TSpectrum& spectrum, std::ofstream& filestr) const
{
   for (std::size_t s = 0; s < spectrum.size(); ++s) {
      if (!filestr.good()) {
         ERROR("@ModelName@_spectrum_plotter::write_spectrum: "
               "file stream is corrupted");
         break;
      }

      filestr << std::left << "# " << spectrum[s].first << '\n';

      for (unsigned i = 0; i < spectrum[s].second.rows(); ++i) {
         std::stringstream latex_name, latex_name_with_index;
         latex_name << "$" << spectrum[s].first << "$";
         latex_name_with_index << "$" << spectrum[s].first;
         if (spectrum[s].second.rows() > 1)
            latex_name_with_index << "_{" << (i+1) << "}";
         latex_name_with_index  << "$";

         filestr << std::left << std::setw(width) << s
                 << std::left << std::setw(width) << spectrum[s].second[i]
                 << std::left << std::setw(2*width) << latex_name.str()
                 << std::left << std::setw(2*width) << latex_name_with_index.str()
                 << '\n';
